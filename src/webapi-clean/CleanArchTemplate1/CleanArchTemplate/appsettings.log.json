{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\logs\\CleanArchTemplate.log",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=DSTD1001;Database=AppLog;Integrated Security=true;connection timeout=100;MultipleActiveResultSets=true;",
          "sinkOptionsSection": {
            "tableName": "Tbl_clean_arch_template_log",
            "autoCreateSqlTable": true,
            "period": "0.00:00:30"
          }
        }
      }
    ],
    "Enrich": [ "WithExceptionDetails", "WithMachineName", "WithThreadId" ]
  }
}
